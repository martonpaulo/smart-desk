{
  "name": "smart-desk",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clear:web": "rm -rf node_modules **/node_modules pnpm-lock.yaml apps/web/.next apps/web/out && pnpm store prune && pnpm install",
    "fix:web": "node scripts/fix-web.mjs",
    "build:web": "nx run web:build",
    "dev:web": "nx run web:dev",
    "graph": "nx graph",
    "zip": "node scripts/zip.mjs"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@next/eslint-plugin-next": "15.3.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.11.0",
    "globby": "^14.1.0",
    "jsonc-eslint-parser": "^2.4.0",
    "nx": "19.8.14",
    "prettier": "^3.5.3",
    "typescript": "^5"
  }
}
