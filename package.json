{
  "name": "smart-desk",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev:web": "nx run web:dev",
    "dev:native": "cd apps/native && pnpm start",
    "build:web": "nx run web:build",
    "build:native": "cd apps/native && pnpm build",
    "lint:web": "cd apps/web && pnpm lint",
    "lint:native": "cd apps/native && pnpm lint",
    "typecheck:web": "cd apps/web && pnpm typecheck",
    "typecheck:native": "cd apps/native && pnpm typecheck",
    "format:web": "cd apps/web && pnpm format",
    "format:native": "cd apps/native && pnpm format",
    "clear:web": "rm -rf node_modules **/node_modules pnpm-lock.yaml apps/web/.next apps/web/out && pnpm store prune && pnpm install",
    "clear:native": "rm -rf apps/native/node_modules apps/native/.expo apps/native/dist && pnpm install",
    "fix:web": "node scripts/fix-web.mjs",
    "fix:native": "cd apps/native && pnpm install && pnpm lint --fix && pnpm format",
    "fix:all": "pnpm fix:web; pnpm fix:native",
    "graph": "nx graph",
    "zip": "node scripts/zip.mjs"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@next/eslint-plugin-next": "15.3.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.11.0",
    "globby": "^14.1.0",
    "jsonc-eslint-parser": "^2.4.0",
    "nx": "19.8.14",
    "prettier": "^3.5.3",
    "typescript": "^5"
  }
}
