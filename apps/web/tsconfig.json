{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js App",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Next.js app specific
    "baseUrl": ".",

    // Next 15 friendly targets
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "moduleResolution": "bundler",

    // App doesnâ€™t emit
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "incremental": true,

    // Types and plugin for Next
    "types": ["node", "react", "react-dom", "next"],
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", ".next", "out"]
}
